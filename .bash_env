# ~/.bash_env
#
#====   R ====
R_LIBS_USER="~/R/R_LIBS_USER"
export R_LIBS_USER
#=============
# 

#====  nvim =====
VIMRC=~/dotfiles/init.vim			# physical location of file
#VIMRC="~/.config/nvim/init.vim"		# ln -s does not seem to work
export VIMRC

#====	TMUX =====
START_TMUX="~/dotfiles/start_tmux.sh"
export START_TMUX

#====	PATH ====
#OLD_PATH="/home/jim/bin:/home/jim/.local/bin:/home/jim/bin:/home/jim/.local/bin:/home/jim/bin:/home/jim/.local/bin:/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games"
OLD_PATH="$PATH"
PATH="/home/jim/bin:/home/jim:/home/jim/dotfiles:/usr/local/bin:/usr/bin:/bin"
export PATH
#
#
# when leaving the console clear the screen to increase privacy

if [ "$SHLVL" = 1 ]; then
    [ -x /usr/bin/clear_console ] && /usr/bin/clear_console -q
fi
