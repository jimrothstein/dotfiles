#------------------------  PURPOSE
# overflow from `config`
# ~/dotfiles/i3/config_extra is attempt to keep main config file
# ~/dotfiles/i3/config  as simple as possible.
#------------------------  PURPOSE

# experimental
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    # from https://github.com/Tazeg/i3status
    #status_command exec /home/yelinaung/.config/i3status/mybar.sh
    colors {
        separator #000000

        ## colour of border, background, and text
        focused_workspace       #2f343f #bf616a #d8dee8
        active_workspace        #2f343f #2f343f #d8dee8
        inactive_workspace      #2f343f #2f343f #d8dee8
        urgent_workspace        #2f343f #ebcb8b #2f343f
    }
    #height 25
}

#------------------------ change focused window  
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window ------ 
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# navigate to adjacent workspaces
bindsym $mod+bracketleft workspace prev
bindsym $mod+bracketright workspace next
bindsym $mod+Control+h workspace prev
bindsym $mod+Control+l workspace next

# enter fullscreen mode for the focused container
bindsym $mod+F11 fullscreen toggle

# change container layout (stacked, tabbed, toggle split = defaut)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating  ------------ (centers as a little window !)
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# window operations
bindsym $mod+Shift+f fullscreen toggle          # toggle fullscreen
bindsym $mod+Shift+c kill                        # close window
bindsym $mod+Shift+r restart                     # restart i3

# quick workspace switching - REMOVED to avoid conflicts with main config
# Keep workspace bindings in main config file only
